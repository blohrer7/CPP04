CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++17

NAME = brain

SRC =	Dog.cpp \
		Cat.cpp \
		WrongAnimal.cpp \
		Brain.cpp \
		WrongCat.cpp \
		Animal.cpp \
		main.cpp
OBJ = $(SRC:.cpp=.o)

$(NAME): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean $(NAME)

.PHONY: clean fclean re
